<nav class="site-nav">
    <div class="site-nav-left">
        {{^is "home"}}
            {{#if @blog.logo}}
                <a class="site-nav-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>
            {{else}}
                <a class="site-nav-logo" href="{{@blog.url}}">{{@blog.title}}</a>
            {{/if}}
        {{/is}}
        {{#if @blog.navigation}}
            {{navigation}}
        {{/if}}
    </div>
    <div class="site-nav-right">
        <div class="social-links">
            {{#if @blog.twitter}}
                <a class="social-link social-link-tw" href="{{twitter_url @blog.twitter}}" target="_blank" rel="noopener">{{> "icons/twitter"}}</a>
                <a class="social-link social-link-tw" href="//instagram.com/inrenping" target="_blank" rel="noopener">{{> "icons/instagram"}}</a>
                <a class="social-link social-link-tw" href="//www.douban.com/people/inrenping/" target="_blank" rel="noopener">{{> "icons/douban"}}</a>
                <a class="social-link social-link-tw" href="//github.com/inrenping" target="_blank" rel="noopener">{{> "icons/github"}}</a>
                <a class="social-link social-link-tw" href="mailto:inrenping@gmail.com" target="_blank" rel="noopener">{{> "icons/gmail"}}</a>
            {{/if}}
        </div>
    </div>
</nav>
